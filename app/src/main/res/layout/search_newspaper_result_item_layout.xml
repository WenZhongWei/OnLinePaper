<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    android:gravity="center"
    app:cardElevation="5dp"
    app:cardCornerRadius="0dp"
    android:elevation="1dp"
    android:layout_marginBottom="1dp"
    app:contentPadding="10dp"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/select_paper"
            android:id="@+id/imageView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页数:"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/id_search_all_item_pagesnum"
            android:layout_toStartOf="@+id/id_search_all_item_pagesnum" />
        <TextView
            android:id="@+id/id_search_all_item_pagesnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报刊页数"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@+id/id_search_all_item_time"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/id_search_all_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报刊名字"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView5" />

        <TextView
            android:id="@+id/id_search_all_item_time"
            android:hint="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5" />
    </RelativeLayout>

</android.support.v7.widget.CardView>