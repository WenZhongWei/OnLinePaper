<RelativeLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior" 不用这个属性这个布局将会被toolbar遮挡 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_search_linearlayout"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="#e5e5e5"
            android:paddingLeft="10dp"
            android:text="报刊类型"/>

        <org.angmarch.views.NiceSpinner
            android:layout_width="match_parent"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_search_spinner_type"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="#e5e5e5"
            android:text="选择报刊"/>
        <org.angmarch.views.NiceSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:id="@+id/id_search_spinner_baokan"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#e5e5e5">
            </LinearLayout>

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/id_search_calendarView" />
    </LinearLayout>

</RelativeLayout>
